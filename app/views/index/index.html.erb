<% if flash[:errors] %>
	<div id='errors' class='alert alert-danger' role='alert'>
		<h3>Uh oh! Looks like something went wrong...</h3>
		<ul>
		<%flash[:errors].each do |error|%>
			<li><%=error%></li>
		<%end%>
		</ul>
	</div>
<% end %>

<div class='card'>
	<div class='card-block'>
		<div id='scrape' class='initial-form'>
			<%= render '/form', caption: 'Scrape Instagram', method: 'post'  %>
		</div>
		<div id='retrieve' class='initial-form'>
			<%= render '/form', caption: 'Search Locally', method: 'get'  %>
		</div>
	</div>
</div>
